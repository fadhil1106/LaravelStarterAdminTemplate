{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "tailwind": "tailwindcss build public/assets/css/tailwind.css -o public/assets/css/tailwind.output.css",
        "build": "env NODE_ENV=production postcss public/assets/css/tailwind.css -o public/assets/css/tailwind.output.css",
        "cz": "git-cz",
        "release": "release-it"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "1.1.4",
        "@tailwindcss/custom-forms": "0.2.1",
        "autoprefixer": "^10.3.7",
        "axios": "^0.21",
        "color": "3.1.2",
        "commitizen": "^4.2.4",
        "cssnano": "4.1.10",
        "cz-conventional-changelog": "3.2.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.3.9",
        "postcss-cli": "7.1.1",
        "release-it": "13.6.4",
        "tailwindcss": "^2.2.16",
        "tailwindcss-multi-theme": "1.0.3"
    },
    "keywords": [
        "tailwind",
        "windmill",
        "dashboard",
        "template",
        "admin"
    ],
    "release-it": {
        "github": {
            "release": true
        },
        "npm": {
            "publish": false
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular",
                "infile": "CHANGELOG.md"
            }
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
